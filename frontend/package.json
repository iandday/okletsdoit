{
    "name": "okletsdoit",
    "description": "Frontend for OkLetsDoIt, a wedding website template built with SvelteKit and TailwindCSS + DaisyUI.",
    "homepage": "",
    "author": {
        "name": "Ian Day",
        "url": ""
    },
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite dev --host",
        "build": "vite build",
        "preview": "vite preview",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "lint": "prettier --check . && eslint .",
        "format": "prettier --write .",
        "openapi:generate": "export JAVA_TOOL_OPTIONS=\"-Dio.swagger.parser.util.RemoteUrl.trustAll=true -Dio.swagger.v3.parser.util.RemoteUrl.trustAll=true\" &&  openapi-generator-cli generate -i https://dev.internal/api/openapi.json -g typescript-fetch -o ./api-client && prettier --check --write .",
        "openapi:generate:prod": "openapi-typescript $BACKEND_API_URL/api/openapi.json -o src/lib/api/schema.d.ts"
    },
    "engines": {
        "node": ">=20.9.0"
    },
    "devDependencies": {
        "@eslint/compat": "^1.4.1",
        "@eslint/js": "^9.39.2",
        "@openapitools/openapi-generator-cli": "^2.25.2",
        "@sveltejs/adapter-auto": "^6.1.1",
        "@sveltejs/kit": "^2.49.2",
        "@sveltejs/vite-plugin-svelte": "^5.1.1",
        "@tailwindcss/vite": "^4.1.18",
        "@trivago/prettier-plugin-sort-imports": "^5.2.2",
        "@types/simplebar": "^5.3.3",
        "autoprefixer": "^10.4.23",
        "daisyui": "^5.5.14",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-svelte": "^3.13.1",
        "globals": "^16.5.0",
        "openapi-fetch": "^0.15.0",
        "openapi-typescript": "^7.10.1",
        "prettier": "^3.7.4",
        "prettier-plugin-svelte": "^3.4.1",
        "prettier-plugin-tailwindcss": "^0.6.14",
        "svelte": "^5.46.0",
        "svelte-adapter-bun": "^1.0.1",
        "svelte-check": "^4.3.4",
        "tailwindcss": "^4.1.18",
        "tailwindcss-motion": "^1.1.1",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.49.0",
        "vite": "^6.4.1"
    },
    "dependencies": {
        "@iconify-json/lucide": "^1.2.81",
        "@iconify/tailwind4": "^1.2.0",
        "motion": "^12.23.26",
        "simplebar": "^6.3.3",
        "swiper": "^11.2.10"
    }
}
